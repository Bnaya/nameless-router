{
  "engines": {
    "yarn": ">=1.3.2"
  },
  "name": "nameless-router-monorepo",
  "version": "0.0.1",
  "description": "Monorepo root",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.0.6",
    "lerna": "^2.7.0",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "test": "jest",
    "prettier-all": "prettier --write \"packages/**/*.{ts,tsx}\""
  },
  "jest": {
    "collectCoverage": false,
    "mapCoverage": false,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "projects": [
      "<rootDir>/packages/not-a-router"
    ]
  }
}
